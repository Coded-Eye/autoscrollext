{
    "manifest_version": 2,
    "name": "better autoscroll",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "app.js"
            ],
            "css": [
                "app.css"
            ]
        }
    ],

    "icons": {
        "32": "auto-scroll.svg"
    },

    "web_accessible_resources": ["auto-scroll.svg"]
}